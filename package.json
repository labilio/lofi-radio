{
  "name": "lofi-radio-player",
  "version": "1.0.2",
  "description": "Lofi Radio Player",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron . --disable-dev-tools",
    "dev": "electron .",
    "debug": "electron . --enable-logging --log-level=0",
    "generate-icon": "node generate-icon.js",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "dist": "electron-builder --win --publish=never",
    "dist:mac": "electron-builder --mac --publish=never",
    "pack": "electron-packager . --platform=win32 --arch=x64 --out=dist --overwrite",
    "pack:mac": "electron-packager . --platform=darwin --arch=x64 --out=dist --overwrite"
  },
  "keywords": [
    "electron",
    "music-player",
    "lofi",
    "bilibili"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.lofi-radio-player.app",
    "productName": "Lofi Radio Player",
    "electronLanguages": [
      "zh-CN",
      "en"
    ],
    "directories": {
      "output": "dist_green"
    },
    "files": [
      "**/*",
      "!dist_green/**/*",
      "!*.md",
      "!build/**/*",
      "!*.ps1",
      "!*.bat"
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        "dir"
      ]
    },
    "mac": {
      "icon": "icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lofi Radio Player"
    }
  }
}
